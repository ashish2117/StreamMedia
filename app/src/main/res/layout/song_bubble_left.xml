<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:id="@+id/chat_bubble_layout"
    android:gravity="center_vertical"
    android:background="@drawable/round_corners_accent">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginLeft="5dp"
        android:layout_weight="1.0">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/song_bubble_title"
            android:textSize="17sp"
            android:layout_gravity="center_vertical"
            android:layout_weight="1.0"
            android:text="this is message from your friend"
            android:textColor="#ffffff"
            android:singleLine="true"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#ffffff"
                android:text="12:12 am"
                android:textSize="10sp"
                android:layout_marginRight="4dp"
                android:id="@+id/timeStampTextView"
                android:layout_marginBottom="3dp"
                android:layout_gravity="right"/>

    </LinearLayout>

    <TextView
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:id="@+id/messageId"/>

    <LinearLayout
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:background="@drawable/round_corners_primary"
        android:orientation="vertical"
        android:gravity="center"
        android:layout_margin="5dp">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_headset_white_24dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="12:12"
            android:textSize="10sp"
            android:textColor="#ffffff"
            android:id="@+id/songDurationTextView"/>
    </LinearLayout>

</LinearLayout>